---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';
import qrCode from '../assets/qr-code.png';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="main-content">
			<div class="container">
				<div class="layout-grid">
					<div class="qr-section">
						<div class="qr-container">
							<Image src={qrCode} alt="QR Code" class="qr-image" width={200} height={200} />
						</div>
					</div>
					
					<div class="posts-section">
						<h1 class="section-title">Commit History</h1>
						<div class="posts-list">
							{sortedPosts.map((post, index) => (
								<article class="post-item">
									<div class="post-meta">
										<time class="post-date">
											<FormattedDate date={post.data.pubDate} />
										</time>
									</div>
									<div class="post-content">
										<h2 class="post-title">
											<a href={`/blog/${post.id}`}>{post.data.title}</a>
										</h2>
										<p class="post-excerpt">{post.data.description}</p>
									</div>
									{index < sortedPosts.length - 1 && <hr class="post-divider" />}
								</article>
							))}
						</div>
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.main-content {
		min-height: calc(100vh - 200px);
		padding: 3rem 0;
	}
	
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}
	
	.layout-grid {
		display: grid;
		grid-template-columns: 300px 1fr;
		gap: 4rem;
		align-items: start;
	}
	
	.qr-section {
		position: sticky;
		top: 2rem;
	}
	
	.qr-container {
		text-align: center;
		padding: 2rem;
		background: var(--remarkable-paper);
		border: 1px solid var(--remarkable-border);
		border-radius: 8px;
	}
	
	.qr-image {
		width: 200px;
		height: 200px;
		object-fit: contain;
		margin-bottom: 1rem;
	}
	
	.qr-text {
		font-size: 0.9rem;
		color: var(--remarkable-text-muted);
		margin: 0;
		font-weight: 400;
	}
	
	.posts-section {
		flex: 1;
	}
	
	.section-title {
		font-size: 2rem;
		font-weight: 600;
		margin: 0 0 2rem 0;
		color: var(--remarkable-accent);
	}
	
	.posts-list {
		display: flex;
		flex-direction: column;
		gap: 0;
	}
	
	.post-item {
		padding: 1.5rem 0;
		display: grid;
		grid-template-columns: 100px 1fr;
		gap: 1.5rem;
		align-items: start;
	}
	
	.post-meta {
		text-align: right;
	}
	
	.post-date {
		font-size: 0.85rem;
		color: var(--remarkable-text-muted);
		font-weight: 400;
		white-space: nowrap;
	}
	
	.post-content {
		flex: 1;
	}
	
	.post-title {
		font-size: 1.3rem;
		font-weight: 600;
		margin: 0 0 0.5rem 0;
		line-height: 1.3;
	}
	
	.post-title a {
		color: var(--remarkable-accent);
		text-decoration: none;
		transition: color 0.2s ease;
	}
	
	.post-title a:hover {
		color: var(--remarkable-text);
	}
	
	.post-excerpt {
		color: var(--remarkable-text-light);
		line-height: 1.5;
		margin: 0;
		font-size: 0.95rem;
	}
	
	.post-divider {
		border: none;
		border-top: 1px solid var(--remarkable-border);
		margin: 0;
		grid-column: 1 / -1;
		margin-top: 1.5rem;
	}
	
	@media (max-width: 1024px) {
		.layout-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		
		.qr-section {
			position: static;
			order: 2;
		}
		
		.posts-section {
			order: 1;
		}
		
		.qr-container {
			padding: 1.5rem;
		}
		
		.qr-image {
			width: 150px;
			height: 150px;
		}
	}
	
	@media (max-width: 768px) {
		.main-content {
			padding: 2rem 0;
		}
		
		.container {
			padding: 0 1rem;
		}
		
		.section-title {
			font-size: 1.8rem;
			margin-bottom: 1.5rem;
		}
		
		.post-item {
			grid-template-columns: 1fr;
			gap: 0.5rem;
			padding: 1rem 0;
		}
		
		.post-meta {
			text-align: left;
			order: 2;
		}
		
		.post-content {
			order: 1;
		}
		
		.post-title {
			font-size: 1.2rem;
			margin-bottom: 0.25rem;
		}
		
		.qr-container {
			padding: 1rem;
		}
		
		.qr-image {
			width: 120px;
			height: 120px;
		}
	}
	
	@media (max-width: 480px) {
		.layout-grid {
			gap: 1.5rem;
		}
		
		.section-title {
			font-size: 1.6rem;
		}
		
		.post-title {
			font-size: 1.1rem;
		}
		
		.qr-image {
			width: 100px;
			height: 100px;
		}
	}
</style>
